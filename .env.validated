# Database host address
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database user
DB_USER=expense_user

# Database password
DB_PASSWORD=expense_password

# Database name
DB_NAME=expense_db

# PostgreSQL connection string
DATABASE_URL=postgresql://expense_user:expense_password@localhost:5432/expense_db

# Node environment
NODE_ENV=development

# Backend server port
BACKEND_PORT=5000

# Frontend server port
FRONTEND_PORT=3000

# JWT secret key (min 32 characters)
JWT_SECRET=dev-jwt-secret-change-in-production

# JWT expiration time
JWT_EXPIRES_IN=7d

# API URL for frontend
VITE_API_URL=http://localhost:5000

# Logging level
LOG_LEVEL=debug

# Log format
LOG_FORMAT=dev