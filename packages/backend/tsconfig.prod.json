{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": true,
    "declaration": false,
    "inlineSourceMap": false,
    "inlineSources": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts", 
    "**/*.test.ts",
    "src/tests/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}